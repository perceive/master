<?xml version="1.0"?>
<openerp>
    <data>
        <!-- CRM Lead Tree View -->
        <record model="ir.ui.view" id="crm_case_tree_view_leads_extend">
            <field name="name">Leads Extend</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='name']" position="after">
                    <field name="partner_name" string="Company Name"/>
                </xpath>
            </field>
        </record>
        
        <record model="ir.ui.view" id="crm_case_form_view_leads_extend">
            <field name="name">CRM - Leads Form Extend</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='categ_ids']" position="after">
                    <field name="reminder_date"/>
                    <field name="alarm_id"/>
                </xpath>
            </field>
        </record>
        
        <record model="ir.ui.view" id="crm_case_form_view_leads_extend1">
            <field name="name">CRM - Leads Form Extend</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='categ_ids']" position="after">
                    <field name="reminder_date"/>
                    <field name="alarm_id"/>
                </xpath>
            </field>
        </record>
        
        <record model="ir.ui.view" id="crm_case_phone_form_view_extend">
            <field name="name">CRM - Phone Call Form Extend</field>
            <field name="inherit_id" ref="crm.crm_case_phone_form_view"/>
            <field name="model">crm.phonecall</field>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/field[@name='categ_id']" position="before">
                    <field name="reminder_date"/>
                    <field name="alarm_id"/>
                </xpath>
            </field>
        </record>
        
        
        <record model="ir.ui.view" id="view_calendar_event_form_lead">
            <field name="name">Calendar - Event Form Lead</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@string='Meeting Details']/group/group/field[@name='stop_date']" position="after">
                        <field name="leave_behinds"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_calendar_event_search_lead" model="ir.ui.view">
            <field name="name">CRM - Meetings Search</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search/filter[@string='My Events']" position="after">
                    <field name="leave_behinds"/>
                    <filter icon="terp-go-today" string="Leave Behinds" help="Leave Behinds"/>
                </xpath>
                <xpath expr="//search/group/filter[@string='Responsible']" position="after">
                    <filter string="Leave Behinds" icon="terp-personal" domain="[]" context="{'group_by':'leave_behinds'}"/>
                </xpath>
            </field>
    </record>
    
        
    </data>
 </openerp>
    